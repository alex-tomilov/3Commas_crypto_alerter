<div id="<%= dom_id alert %>" class="w-full sm:w-auto my-5 space-y-5">
  <p>Symbol: <%= alert.symbol %></p>
  <p>Side: <%= alert.side %></p>
  <p>Price: <%= alert.price %></p>
  <p>Channels: <%= alert.email_channels.map(&:email_address).join(', ') %></p>
  <%= link_to "Show this alert", alert, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
